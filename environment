#!/bin/sh

BSPJOB=4
BSPROOT=`pwd`
# platform
BSPCC=
BSPCXX=
BSPHOST=
BSPCFLAGS=
BSPLDFLAGS=
#BSPCFLAGS=" -fsanitize=thread -fPIC -pie "
#BSPLDFLAGS=" -fsanitize=thread -fPIC -pie "
BSPEXTRAFLAGS=
# tools and output
