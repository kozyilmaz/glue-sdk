#!/bin/sh

BSPJOB=4
BSPROOT=`pwd`
BSPTOOLS=${BSPROOT}/tools/o
BSPROOTFS=${BSPROOT}/rootfs
BSPINSTALL=${BSPROOT}/out
PATH=${BSPTOOLS}/bin:${PATH}

export BSPJOB BSPROOT BSPTOOLS BSPROOTFS BSPINSTALL PATH

BSPHOST=
BSPPREFIX=
#BSPCFLAGS=
#BSPLDFLAGS=
BSPCFLAGS=" -fsanitize=thread -fPIC -pie "
BSPLDFLAGS=" -fsanitize=thread -fPIC -pie "
BSPSYSROOT=
BSPTOOLCHAIN=

export BSPHOST BSPPREFIX BSPCFLAGS BSPLDFLAGS BSPSYSROOT BSPTOOLCHAIN

# tool selection
export TOOLS_ENABLE_CMAKE=y
